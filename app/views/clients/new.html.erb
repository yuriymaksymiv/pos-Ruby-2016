<div class="container">

<div class="row">
 	<div class="col-md-3">




<div class="panel panel-default">
  <div class="panel-body">
    <b>МАРКЕТИНГ </b>
  </div>
</div>

	<button type="button" class="btn btn-default btn-lg btn-block"><%= link_to "Клієнти", clients_path %></button> 
		<button type="button" class="btn btn-default btn-lg btn-block"><%= link_to "Групи клієнтів", clients_path %></button> 
	</div>
 
<div class="col-md-9" >
<h1>Новий клієнт</h1>

	<%= form_for :client, url: clients_path do |f| %>
		<% if @client %>
		<p>
		<ul>
			<% @client.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>			
		</ul>
		</p>
		<% end %>

		<p>
			ПІБ клієнта <br>
			<%= f.text_field :client %>	
		</p>

		<p>
			Дата народження <br>
			<%= f.text_field :databird %>	
		</p>

		<p>
			Група <br>
			<%= f.text_field :group %>	
		</p>

		<p>
			Телефон <br>
			<%= f.text_field :phone %>	
		</p>

		<p>
			E-mail <br>
			<%= f.text_field :email %>	
		</p>

		<p>
			Адрес <br>
			<%= f.text_field :address %>	
		</p>

		<p>
			Місто <br>
			<%= f.text_field :city %>	
		</p>

		<p>
			Країна <br>
			<%= f.text_field :country %>	
		</p>

		<p>
			Коментар <br>
			<%= f.text_area :comment %>	
		</p>

		<p>
			<%= f.submit 'Додати клієнта' %>
			
		</p>

	<% end %>

  
  </div>
  </div>
</div>